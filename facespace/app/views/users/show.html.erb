<h1><%= @user.name %></h1>
<br/>
<em>
	<%= @user.bio %>
</em>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="well well-sm">
			<%= form_for Wallpost.new, url: '/make_post' do |f| %>
				<fieldset>					
					<%= f.hidden_field :user_id, value: @user.id %>
					<div class="form-group">
						<label class="col-md-3 control-label" for="name"><%= f.label :post_comment %></label>
						<div class="col-md-9"><%= f.text_area :post_comment %></div>
					</div>					
					<div class="form-group">
					  <div class="col-md-12">
						  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
					  </div>
					</div>
				</fieldset>				
			<% end %>
		</div>
		<div class="well well-sm">
			<% @wallposts.each do |wallpost| %>
				<strong> <%= wallpost.post_comment %> </strong> 
				<br/>
				<br/>
			<% end %>
		</div>
	</div>
</div>

