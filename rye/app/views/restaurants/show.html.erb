<h1>RYE : Rate your experience 
for <%= @restaurant.name %>
</h1>



<%= form_for Rating.new, url: '/post_rating' do |f| %>
<%= f.hidden_field :restaurant_id, value: @restaurant.id %>
<br/>
<%= f.label :stars %>
<%= f.select :stars, [['1 star', 1], ['2 stars', 2], ['3 stars', 3], ['4 stars', 4], ['5 fricken stars', 5]] %>
<br/>
<%= f.label :comments %>
<%= f.text_area :comments %>
<%= f.submit "Submit your Review" %>
<% end %>
<br/><br/>
<% @ratings.each do |rating| %>
	<strong> <%= rating.stars %> </strong> : <%= rating.comments %> 
	<% if rating.user %>
		<br/><small>by <%= rating.user.email %></small>
	<% end %>
	<br/>
	<br/>
<% end %>


