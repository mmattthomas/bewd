<!DOCTYPE html>
<html>
<head>
  <title>Rye</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div><%= flash[:notice] %></div>

<% if @current_user %>
<div>
	Welcome, <%= @current_user.email %> | <a href="/logout">Logout</a>
</div>	
<% else %>
<div>
	<a href="/signup">Signup</a> | <a href="/login">Login</a>
</div>	
<% end %>

<%= yield %>

<br/><br/>
<small>
Number of Page Views : <%= @pageviews %>
</small>
</body>
</html>
